    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceRoot}",
            "env": {
                "PYTHONPATH": "${workspaceRoot}"
            }
        },
        {
            "name": "Python: Django Journal",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceRoot}/manage.py",
            "args": [
                "runserver",
            ],
            "justMyCode": true,
            "django": true
        },
    ]
}
